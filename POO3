        Empleados.sexo="masculino o femenino";
        Empleados.cantidad= 50;
        
        System.out.println("Los cargos de los empleados es: "+Empleados.cargo);
        System.out.println("El sexo de los empleados es: "+Empleados.sexo);
        System.out.println("La cantidad de  empleados es: "+Empleados.cantidad);
        
        Zoologico Habitad = new Zoologico();
        Habitad.tama単o="Grande";
        Habitad.ambiente="Mixto, terrestre, acuatico";
