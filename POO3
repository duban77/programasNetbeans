    //Atributos Habitad
    String tama単o;
    String ambiente;
    int cantidadmx;
    //Atributos de animales
    String especie;
    String alimentacion;
    // Metodos
     public static void main(String[] args) {
          Zoologico Empleados = new Zoologico();
