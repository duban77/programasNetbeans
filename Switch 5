#include <iostream>

using namespace std;

int main() {
    float num1, num2, resultado;
    char operacion;

    cout << "Introduce el primer número: ";
    cin >> num1;

    cout << "Introduce el segundo número: ";
    cin >> num2;

    cout << "Introduce la operación a realizar (+, -, *, /): ";
    cin >> operacion;

    switch (operacion) {
        case '+':
            resultado = num1 + num2;
            break;
        case '-':
            resultado = num1 - num2;
            break;
        case '*':
            resultado = num1 * num2;
            break;
        case '/':
            if (num2 != 0) {
                resultado = num1 / num2;
            } else {
                cout << "Error: No se puede dividir por cero." << endl;
                return 1;
            }
            break;
        default:
            cout << "Operación no válida
