#include <iostream>

int main() {
    double numeros[5]; // Definimos un arreglo para almacenar los números
    
    // Pedimos al usuario que ingrese los 5 números
    std::cout << "Por favor, ingrese 5 números reales:" << std::endl;
    for (int i = 0; i < 5; ++i) {
        std::cout << "Número " << i + 1 << ": ";
        std::cin >> numeros[i];
    }
    
    // Mostramos los números en orden contrario al que se introdujeron
    std::cout << "Los números en orden contrario son:" << std::endl;
    for (int i = 4; i >= 0; --i) {
        std::cout << numeros[i] << " ";
    }
    std::cout << std::endl;
    
    return 0;
}
